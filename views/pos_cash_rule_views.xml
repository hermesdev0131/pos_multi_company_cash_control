<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_pos_cash_company_rule_tree" model="ir.ui.view">
        <field name="name">pos.cash.company.rule.list</field>
        <field name="model">pos.cash.company.rule</field>
        <field name="arch" type="xml">
            <list string="POS Cash Company Rules">
                <field name="sequence" widget="handle"/>
                <field name="name"/>
                <field name="pos_config_id"/>
                <field name="fiscal_company_id"/>
                <field name="non_fiscal_company_id"/>
                <field name="target_non_fiscal_percentage"/>
                <field name="active" widget="boolean_toggle"/>
            </list>
        </field>
    </record>

    <!-- Inline list view for use in POS config form -->
    <record id="view_pos_cash_company_rule_tree_inline" model="ir.ui.view">
        <field name="name">pos.cash.company.rule.list.inline</field>
        <field name="model">pos.cash.company.rule</field>
        <field name="arch" type="xml">
            <list string="Cash Company Rules" editable="bottom" default_order="sequence">
                <field name="sequence" widget="handle" column_invisible="1"/>
                <field name="name" string="Rule Name"/>
                <field name="fiscal_company_id" string="Fiscal"
                       options="{'no_create': True, 'no_create_edit': True}"/>
                <field name="non_fiscal_company_id" string="Non-Fiscal"
                       options="{'no_create': True, 'no_create_edit': True}"/>
                <field name="target_non_fiscal_percentage" string="Target %"/>
                <field name="active" widget="boolean_toggle" column_invisible="1"/>
                <field name="pos_config_id" column_invisible="1"/>
            </list>
        </field>
    </record>

    <!-- Inline form view for use in POS config form -->
    <record id="view_pos_cash_company_rule_form_inline" model="ir.ui.view">
        <field name="name">pos.cash.company.rule.form.inline</field>
        <field name="model">pos.cash.company.rule</field>
        <field name="arch" type="xml">
            <form string="Cash Company Rule">
                <sheet>
                    <group>
                        <group string="General Information">
                            <field name="name"/>
                            <field name="pos_config_id" 
                                   options="{'no_create': True, 'no_create_edit': True}" 
                                   invisible="1"/>
                            <field name="company_id" 
                                   options="{'no_create': True, 'no_create_edit': True}"
                                   invisible="1"/>
                            <field name="sequence" widget="handle"/>
                            <field name="active"/>
                        </group>
                        <group string="Company Selection">
                            <field name="fiscal_company_id" 
                                   options="{'no_create': True, 'no_create_edit': True}"/>
                            <field name="non_fiscal_company_id" 
                                   options="{'no_create': True, 'no_create_edit': True}"/>
                            <field name="target_non_fiscal_percentage"/>
                            <div class="text-muted">
                                <small>Enter a value between 0 and 100 (e.g., 70 for 70%)</small>
                            </div>
                        </group>
                    </group>
                    <group string="Cash Payment Methods">
                        <field name="cash_payment_method_ids" widget="many2many_tags" 
                               options="{'no_create': True}"/>
                        <div class="alert alert-info" role="alert">
                            <p>
                                <strong>Note:</strong> If no payment methods are selected, 
                                this rule will apply to all cash payment methods in the POS configuration.
                            </p>
                        </div>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_pos_cash_company_rule_form" model="ir.ui.view">
        <field name="name">pos.cash.company.rule.form</field>
        <field name="model">pos.cash.company.rule</field>
        <field name="arch" type="xml">
            <form string="POS Cash Company Rule">
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="toggle_active" type="object" 
                                class="oe_stat_button" icon="fa-archive"
                                invisible="not active"/>
                        <button name="toggle_active" type="object" 
                                class="oe_stat_button" icon="fa-archive"
                                invisible="active"/>
                    </div>
                    <group>
                        <group string="General Information">
                            <field name="name" placeholder="e.g., Default Cash Routing Rule"/>
                            <field name="pos_config_id" 
                                   options="{'no_create': True, 'no_create_edit': True}"/>
                            <field name="company_id" 
                                   options="{'no_create': True, 'no_create_edit': True}"
                                   invisible="1"/>
                            <field name="sequence" widget="handle"/>
                            <field name="active"/>
                        </group>
                        <group string="Company Selection">
                            <field name="fiscal_company_id" 
                                   options="{'no_create': True, 'no_create_edit': True}"/>
                            <field name="non_fiscal_company_id" 
                                   options="{'no_create': True, 'no_create_edit': True}"/>
                            <field name="target_non_fiscal_percentage"/>
                            <div class="text-muted">
                                <small>Enter a value between 0 and 100 (e.g., 70 for 70%)</small>
                            </div>
                        </group>
                    </group>
                    <group string="Cash Payment Methods">
                        <field name="cash_payment_method_ids" widget="many2many_tags" 
                               options="{'no_create': True}"/>
                        <div class="alert alert-info" role="alert">
                            <p>
                                <strong>Note:</strong> If no payment methods are selected, 
                                this rule will apply to all cash payment methods in the POS configuration.
                            </p>
                        </div>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_pos_cash_company_rule_search" model="ir.ui.view">
        <field name="name">pos.cash.company.rule.search</field>
        <field name="model">pos.cash.company.rule</field>
        <field name="arch" type="xml">
            <search string="POS Cash Company Rules">
                <field name="name" string="Rule Name"/>
                <field name="pos_config_id" string="POS Configuration"/>
                <field name="fiscal_company_id" string="Fiscal Company"/>
                <field name="non_fiscal_company_id" string="Non-Fiscal Company"/>
                <filter string="Active" name="active" domain="[('active', '=', True)]"/>
                <filter string="Archived" name="inactive" domain="[('active', '=', False)]"/>
                <group expand="0" string="Group By">
                    <filter string="POS Configuration" name="group_pos_config" context="{'group_by': 'pos_config_id'}"/>
                    <filter string="Fiscal Company" name="group_fiscal_company" context="{'group_by': 'fiscal_company_id'}"/>
                    <filter string="Active" name="group_active" context="{'group_by': 'active'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="action_pos_cash_company_rule" model="ir.actions.act_window">
        <field name="name">POS Cash Company Rules</field>
        <field name="res_model">pos.cash.company.rule</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first cash routing rule
            </p>
            <p>
                Define rules to route cash payments to fiscal or non-fiscal companies
                based on configurable criteria.
            </p>
        </field>
    </record>

    <menuitem id="menu_pos_cash_company_rule"
              name="Cash Company Rules"
              parent="point_of_sale.menu_point_of_sale"
              action="action_pos_cash_company_rule"
              sequence="100"/>
</odoo>
