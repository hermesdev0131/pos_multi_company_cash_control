<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Extension of POS Configuration form view -->
    <record id="view_pos_config_form_inherit_multi_company_cash_control" model="ir.ui.view">
        <field name="name">pos.config.form.inherit.multi.company.cash.control</field>
        <field name="model">pos.config</field>
        <field name="inherit_id" ref="point_of_sale.pos_config_view_form"/>
        <field name="arch" type="xml">
            <!-- Add new section after payment methods -->
            <xpath expr="//group[@name='payment']" position="after">
                <group string="Multi-Company Cash Control" name="multi_company_cash_control">
                    <group>
                        <!-- Placeholder fields to be added later:
                        <field name="cash_company_rule_ids" 
                               widget="many2many_tags" 
                               options="{'no_create': True}"/>
                        <field name="enable_multi_company_cash_control"/>
                        -->
                        <div class="alert alert-info" role="alert">
                            <p>
                                <strong>Multi-Company Cash Control</strong>
                            </p>
                            <p>
                                Configure rules for routing cash payments to fiscal or 
                                non-fiscal companies. This feature will be available in 
                                a future update.
                            </p>
                        </div>
                    </group>
                </group>
            </xpath>
        </field>
    </record>
</odoo>
